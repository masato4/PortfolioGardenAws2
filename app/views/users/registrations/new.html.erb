  <main>
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true ,class:"form-size-1 mb-3"%>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-size-1 mb-3" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class:"form-size-1 mb-3"%>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-size-1 mb-3" %>
      </div>
      <div class="actions">
        <input type="submit" name="commit" value="Sign up" data-disable-with="Sign up" class="btn btn-border mb-3">
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </main>
</html>
