<html>
  <main>
    <h2>Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email ,class:"mab-3"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"mb-3 form-size-1"%>
      </div>
      <div class="actions">
        <%= f.submit "Send me reset password instructions",class:"mb-3 btn btn-border" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </main>
</html>
